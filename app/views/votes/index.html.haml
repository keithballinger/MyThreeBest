%body
  #layout
    = render "shared/header"
    #body_container
      .work_container
        .work_bg_repeat
          .work_bg_top
            .work_bg_bottom
              .work_main
                = render :partial => "shared/menu", :locals => {:active => "see_votes"}
                .invite_left
                  = render "shared/user_avatar"
                  = render "shared/three_best"
                .invite_right
                  .invite_right_bg
                    .invite_right_top
                      .invite_right_bottom
                        .invite_outer01
                          - if @photos.empty?
                            .friends_votes
                              %h2{:class => "brown_text"} You don't have votes yet, invite more friends!!!
                          - else
                            .friends_votes
                              %h2{:class => "brown_text"} Your Votes from Friends
                              - @photos.each do |photo|
                                = render :partial => "shared/photo_vote", :locals => {:css_class => "pad03", :photo => photo}
                            .paging
                              = paginate @photos, :left => 6, :right => 1
                      %span.clear
        %span.clear
    = render :partial => "shared/footer", :locals => {:css_class => "pad1"}
